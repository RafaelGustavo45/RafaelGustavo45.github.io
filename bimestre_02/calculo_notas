<script>


        function media(){
        let nota1 = parseFloat(document.getElementById("nota1").value);
        let nota2 = parseFloat(document.getElementById("nota2").value);
        var media1 = (nota1+nota2)/2;
        alert(media1) }
    
        function frequencia(){
        let faltas = parseFloat(document.getElementById("faltas").value);
        let dias = parseFloat(document.getElementById("dias").value);
        frequenciado = (dias/faltas)*1;
        alert(frequenciado) }

        function exame(){
        let media_exame = parseFloat(document.getElementById("exame").value);
        let media = parseFloat(document.getelementbyid("media").value);
        exame1 = (media+media_exame)/2;
        alert(exame1)}


function verificar1(){
    if(frequenciado < 75)
       alert("reprovado por baixa frenquencia");
   if (frequenciado >=75) and (media1 >=7)
       alert("o aluno foi aprovado");
    if (frequenciado >= 75) and (media1 <7)
       alert("o aluno esta em recuperação");}

function verificar2(){
    if(exame1 >= 5)
       alert("o aluno passou pela recuperação");
    if(exame1 < 5)
       alert("o aluno reprovou")}



</script>
