<script>


        function media(){
        let nota1 = document.getElementById("nota1").value;
        let nota2 = document.getElementById("nota2").value;
        var media = (nota1+nota2)/2
        var media = media   }
    
        function frequencia(){
        let faltas = document.getElementById("faltas").value;
        let dias = document.getElementById("dias").value;
        frequenciado = dias-((faltas*100)/dias) 
        var frequencia = frequenciado }

        function exame(){
        let media_exame = document.getElementById("exame").value;
        let media = document.getelementbyid("media").value;
        exame = (media+media_exame)/2;  
        var passou = exame }

    if(frequencia < 75)
       alert("reprovado por baixa frenquencia");
    if(media >= 0 < 7) and (frequencia >= 75)
       alert("o aluno esta em recuperação");
    if (media >=7)
       alert("o aluno passou direito");
    if(exame >= 5)
       alert("o aluno passou pela recuperação");
    if(exame < 5)
       alert("o aluno reprovou")

    


